{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 14.16.0",
    "compilerOptions": {
      "lib": ["es2020"],
      "module": "commonjs",
      "target": "es2020",
      "sourceMap": true,
      "rootDir": "src",
      "outDir": "build/src",
      "strict": true,
      "removeComments": true,
      "noImplicitAny": false, // Показывать ошибку, если где-то задан тип "any".
      "esModuleInterop": true, //
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }